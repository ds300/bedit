{
  "name": "bedit",
  "version": "0.0.6",
  "description": "better edit than immer",
  "main": "dist/bedit.mjs",
  "files": [
    "dist",
    "bedit.mts",
    "bedit.production.mts"
  ],
  "type": "module",
  "exports": {
    ".": {
      "production": "./dist/bedit.production.mjs",
      "default": "./dist/bedit.mjs"
    }
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "build": "node scripts/build.mjs",
    "prepack": "npm run build",
    "size": "npm run build && esbuild dist/bedit.production.mjs --bundle --minify | wc -c",
    "size:immer": "esbuild node_modules/immer/dist/immer.mjs --bundle --minify | wc -c",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "bench": "vitest bench --run --outputJson bench/results.json",
    "benchmark": "tsx test/benchmark.ts",
    "benchmark:comprehensive": "tsx test/benchmark-comprehensive.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ds300/bedit.git"
  },
  "keywords": [
    "immer"
  ],
  "author": "David Sheldrick",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ds300/bedit/issues"
  },
  "homepage": "https://github.com/ds300/bedit#readme",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "esbuild": "^0.25.8",
    "immer": "^10.0.3",
    "mutative": "^1.0.0",
    "preprocess": "^3.2.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  }
}
